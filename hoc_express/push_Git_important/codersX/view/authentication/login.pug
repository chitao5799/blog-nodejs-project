extends ../common.pug

block content    
    h1 Login
    if errors
            each error in  errors
                .alert.alert-danger=error
    //- ko action trong thẻ form là chính trang hiện tại
    form(method="post",style="width:400px")
        .form-group
            label(for="email", style="font-size:16px") Email:
            input(type="text" name="email",class="form-control",id="email",value=value_Da_Nhap?value_Da_Nhap.email:'') 
        .form-group
            label(for="password", style="font-size:16px") Password:
            input(type="password" name="password",class="form-control",id="password",value=value_Da_Nhap?value_Da_Nhap.password:'')
        button(class="btn btn-primary") Login
