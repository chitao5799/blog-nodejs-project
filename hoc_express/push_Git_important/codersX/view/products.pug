extends ./common.pug

block products 
    h1
        span.mr-3 PRODUCTS
    div.d-flex.align-items-center
        form.ml-auto(action='/products',method='GET',class="d-flex")
            input(type='text',name='page',class="form-control",placeholder="tìm kiếm products")
            button(class="btn btn-primary ml-4") search
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item ">
                a(class="page-link" href='/products?page=' + soTruoc) Previous
            </li>
            li(class="page-item")
                a(class="page-link" href='/products?page=' + soTruoc)=soTruoc
            li(class="page-item active")
                a(class="page-link" href='/products?page=' + soHienTai)=soHienTai 
                    span(class="sr-only") (current)
            li(class="page-item")
                a(class="page-link" href='/products?page=' + soSau)=soSau
            <li class="page-item">
                a(class="page-link" name='tiep' href='/products?page=' + soSau) Next
            </li>
        </ul>
    </nav>
    div(class="wraperr-pd", style="margin:0 auto;width:100%;")
        .container
            .row              
                each pd in products
                    .col-xs-6.col-md-4
                        div(class="card ",style="width: 18rem;margin-bottom:20px;")
                            img(class="card-img-top", src=pd.image, alt="Card image cap")
                            div(class="card-body")
                                h5(class="card-title")=pd.name
                                p(class="card-text")=pd.description
                                a(href="/cart/add/" + pd.id, class="btn btn-primary") Add to cart
